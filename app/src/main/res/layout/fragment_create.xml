<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="preferences.android.eurecom.fr.weew3.Create"
    android:padding="5dp">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:text="Event Type"
        android:textColor="#0000FF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_event_type"
        android:layout_marginTop="50dp"/>

    <Spinner
        android:id="@+id/eventTypeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:entries="@array/event_choices"
        android:layout_below="@id/text_event_type"
        />
    <TextView
        android:text="Event Date"
        android:textColor="#0000FF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_event_date"
        android:layout_below="@id/eventTypeSpinner"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="DD/MM/YYYY"
        android:ems="10"
        android:id="@+id/eventDateText"
        android:focusable="false"
        android:drawableLeft="@drawable/ic_calendar"
        android:layout_below="@id/text_event_date"/>
    <TextView
        android:text="Event Time"
        android:textColor="#0000FF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_event_time"
        android:layout_below="@id/eventDateText"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="HH:MM"
        android:ems="10"
        android:id="@+id/eventTimeText"
        android:focusable="false"
        android:drawableLeft="@drawable/ic_clock"
        android:layout_below="@id/text_event_time"/>


</RelativeLayout>
